<!--  店铺抬头2 -->
<template name="tpl_shop">
    <view class="tplShopBorder" data-page="page.public.pageHeaderTwo">
        <view class="pageHeaderOne" style="background:{{content.content.bgcolor}} url({{content.content.shop_head_bg_img}}) center center no-repeat;    background-size: cover;">
            <view class="pageLogo verticalCentering">
                <image src="{{content.content.shop_head_logo_img}}"> </image>
            </view>
            <view class="pageInfo">
                <view class="shopName">
                    <view>{{content.content.title}}</view>
                </view>
                <view class="clearfix shopInfoList">
                    <view>
                        <navigator url="/pages/product/productList" class="navigator" hover-class="none" open-type="navigate">
                            <view class="">{{content.content.product_count}}</view>
                            <text>全部商品</text>
                        </navigator>
                    </view>
                    <view>
                        <navigator url="/pages/user/myCollection/index" class="navigator" hover-class="none" open-type="navigate">
                            <view class="">  <text class="iconfont icon-shoucang"></text></view>
                            <text>我的收藏</text>
                        </navigator>
                    </view>
                    <view>
                        <navigator url="/pages/user/order/orderList" class="navigator" hover-class="none" open-type="navigate">
                            <view>
                                <text class="iconfont icon-geren"></text>
                            </view>
                            <text> 我的订单 </text>
                        </navigator>
                    </view>
                </view>
            </view>
        </view>
    </view>
</template>
